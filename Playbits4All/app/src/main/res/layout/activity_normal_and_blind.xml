<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Normal_and_Blind"
    android:background="@drawable/nab_backgroud">

    <include
        android:id="@+id/include"
        layout="@layout/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/bigbox"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include"
        app:layout_constraintVertical_bias="0.26">


        <Button
            android:id="@+id/normal_one"
            android:layout_width="243dp"
            android:layout_height="68dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="60dp"
            android:text="Normal People"
            app:rippleColor="#039BE5" />

        <Button
            android:id="@+id/blind_two"
            android:layout_width="243dp"
            android:layout_height="68dp"
            android:layout_below="@+id/normal_one"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:text="Blind People" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
